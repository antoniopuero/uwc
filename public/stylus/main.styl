*
    margin: 0
    padding: 0

.hidden
	display: none

label.error
	color: #c7254e
	background: #f9f2f4

.iso-wrap
    padding: 10px
.article
    border-radius: 2px
    outline: 1px solid #E0E0E0
    box-shadow: 2px 2px 5px #999696

    .row-fluid
        border-bottom: 1px solid #D4D7E4

        &:last-child
            border-bottom: none

.article-image
    width: 100%
    height: 150px
    text-align: center

    img
        position: relative
        height: 100%
        display: inline


.article-header
    padding-left: 1%
    text-align: center

    a
        color: #416475
        &:hover
            color: #7082C2
            text-decoration: none

.article-prologue
    padding: 2%


.article-author
    text-align: center
    color: #474747

table
    .delete
        cursor: pointer
